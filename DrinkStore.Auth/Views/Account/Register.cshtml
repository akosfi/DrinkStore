@model RegisterViewModel

<div class="row d-flex justify-content-center">

    <div class="col-md-4">

        <h1 class="mt-5 mb-3">Register</h1>

        <form asp-route="Register">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" placeholder="name" asp-for="Name" autofocus>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" placeholder="email" asp-for="Email" autofocus>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
            </div>

            <div class="form-group">
                <label asp-for="PasswordRepeated"></label>
                <input type="password" class="form-control" placeholder="Password repeated" asp-for="PasswordRepeated" autocomplete="off">
            </div>


            <div class="mt-4 mb-4">
                <button class="btn btn-primary" name="button" value="register">Register</button>
                <button class="btn btn-light" name="button" value="cancel">Cancel</button>
            </div>

            <partial name="_ValidationSummary" />
        </form>
    </div>
   
</div>